/* miniprogram/pages/confirmList/confirmList.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.for-beauty {
  height: 70rpx;
}

.search-view{
  width: 750rpx;
  height: 70rpx;
  position: fixed;
  background-color: #f6f6f6;
}

.search-input {
  width: 650rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 30rpx;
  margin-left: 20rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  font-size: 32rpx;
}

.search-input-placeholder {
  font-size: 30rpx;
}

.exception-item {
  margin-top: 8rpx;
  margin-left: 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5rpx;
  background-color: white;
  width: 730rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.exception-item-press {
  background-color: rgb(234, 238, 241);
}

.item-text {
  color: rgba(0, 0, 0, 0.705);
  padding-left: 30rpx;
  width: 450rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 36rpx;
}

.item-date {
  color: rgba(0, 0, 0, 0.425);
  margin-left: 30rpx;
  font-size: 28rpx;
}

.item-point {
  background-color: rgba(255, 0, 0, 0.5);
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-left: 26rpx;
}

.item-point-on {
  background-color: rgba(255, 255, 0, 0.3);
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-left: 26rpx;
}

.item-point-ok {
  background-color: rgba(0, 128, 0, 0.5);
  width: 16rpx;
  height: 16rpx;
  border-radius: 8rpx;
  margin-left: 26rpx;
}