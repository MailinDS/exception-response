/* miniprogram/pages/registe/registe.wxss */
.container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.input-view {
  position: absolute;
  width: 690rpx;
  top: 50%;
  left: 50%;
  margin: -180rpx auto auto -345rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.name-input, .department-input {
  width: 650rpx;
  height: 80rpx;
  border-radius: 10rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 30rpx;
  background-color: white;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333333;
}

.input-placeholder {
  color: #CCCCCC;
}

.submit-button {
  width: 680rpx;
  height: 78rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
  line-height: 80rpx;
}