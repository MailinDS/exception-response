/* miniprogram/pages/showList/showList.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.for-beauty {
  width: 750rpx;
  height: 10rpx;
}

.search-input {
  width: 650rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-left: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 10rpx;
  background-color: white;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333333;
}

.search-button {
  width: 680rpx;
  margin-left: 35rpx;
  border-radius: 10rpx;
  margin-top: 15rpx;
}

.exception-item {
  margin-top: 8rpx;
  margin-left: 10rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-radius: 5rpx;
  background-color: white;
  width: 730rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
}

.exception-item-press {
  background-color: rgb(234, 238, 241);
}

.item-text1 {
  color: rgba(0, 0, 0, 0.705);
  margin-left: 10rpx;
  width: 160rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 32rpx;
  text-align: center;
}
.item-text2, .item-text3 {
  color: rgba(0, 0, 0, 0.705);
  margin-left: 20rpx;
  width: 160rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  font-size: 32rpx;
  text-align: center;
}

.item-date {
  color: rgba(0, 0, 0, 0.425);
  margin-left: auto;
  margin-right: 42rpx;
  font-size: 28rpx;
}

.item-point {
  background-color: rgb(255, 0, 0);
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  /* margin-left: auto; */
  margin-right: 32rpx;
}

.item-point-on {
  background-color: rgb(255, 255, 0);
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  /* margin-left: auto; */
  margin-right: 32rpx;
}

.item-point-ok {
  background-color: rgb(0, 128, 0);
  width: 30rpx;
  height: 30rpx;
  border-radius: 15rpx;
  /* margin-left: auto; */
  margin-right: 32rpx;
}

.exception-item-title {
  margin-top: 8rpx;
  margin-left: 10rpx;
  width: 730rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
}

.item-text1-title {
  color: rgba(0, 0, 0, 0.425);
  margin-left: 10rpx;
  width: 160rpx;
  font-size: 32rpx;
  text-align: center;
}
.item-text2-title, .item-text3-title {
  color: rgba(0, 0, 0, 0.425);
  margin-left: 20rpx;
  width: 160rpx;
  font-size: 32rpx;
  text-align: center;
}

.item-date-title {
  color: rgba(0, 0, 0, 0.425);
  margin-left: auto;
  margin-right: 60rpx;
  font-size: 32rpx;
}
